# Environment Variables for AYAN's Store

# Application
NODE_ENV=production

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_mongodb_password_here
MONGODB_URI=mongodb://admin:your_secure_mongodb_password_here@mongodb:27017/ayans-store?authSource=admin

# Backend Configuration
PORT=5000
JWT_SECRET=your_very_secure_jwt_secret_key_change_this
CORS_ORIGIN=http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api

# For Production (Coolify)
# Update these with your actual domain
# CORS_ORIGIN=https://yourdomain.com
# VITE_API_URL=https://api.yourdomain.com/api
